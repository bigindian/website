base(href="/")

if environment != "production"
  style.
    body, html {
      height: 100%
    }
    body.initializing {
      overflow-y: hidden;
      background: #FFF; }
      body.initializing #page-loader {
        display: block; }

    body.initializing auth, body.initializing header, body.initializing main,
    body.initializing section[notifications], body.initializing modal {
      display: none;
    }

    #page-loader {
      position: absolute;
      background: #eee;
      top: 50%;
      left: 50%;
      margin-left: -100px;
      z-index: 1;
      width: 200px; }
      #page-loader #page-loading-bar {
        transition: all 300ms ease-out;
        width: 0%;
        background: #009F5E;
        height: 2px; }
else
  style.
    body,html{height:100%}body.initializing{overflow-y:hidden;background:#FFF}body.initializing #page-loader{display:block}body.initializing auth,body.initializing header,body.initializing main,body.initializing modal,body.initializing section[notifications]{display:none}#page-loader{position:absolute;background:#eee;top:50%;left:50%;margin-left:-100px;z-index:1;width:200px}#page-loader #page-loading-bar{transition:all 300ms ease-out;width:0;background:#009F5E;height:2px}

//- SEO description tag
if description
  meta(name="description", content=description)

if metaRobots
  meta(name="robots" content="#{metaRobots}")


//- SEO keywords tag
meta(name="keywords", content="startup news, startup, news, enterpreneur, india, indian news, indian startup news, ventures, crowd-funding")

//- Other Meta tags
meta(charset="utf-8")
link(href="#{settings.url}" rel="canonical")
meta(http-equiv="content-type", content="text/html; charset=UTF-8")
meta(name="viewport", content="width=device-width, initial-scale=1")