doctype html
//- html(lang= lang, dir= dir, data-ng-strict-di, manifest="/cache.manifest")
html(lang= lang, dir= dir, data-ng-strict-di)
  head
    block meta
    include ./include/head.jade

  body.initializing(itemscope
    itemtype="http://schema.org/WebSite"
    ng-class="bodyClasses"
    ng-style="bodyStyles")

    include ./include/header.jade

    #page-loader
      #page-loading-bar

    #bg-overlay

    //- The rest of the content goes in here
    section#main
      //- Progress loader for when the page is loading
      #page-loader
        md-progress-circular.md-warn(md-mode='indeterminate')
      //- Main content goes in here
      main(ui-view='')
        block robots
        block content

  //- Footer goes in here
  include ./include/footer.jade