h1 {{ "maintitle" | translate:"news/categories" }}
p {{ "help1" | translate:"news/categories" }}
p.hide-if-loggedin {{ "help2-nologin" | translate:"news/categories" }}

table(cellspacing="0")
  tr.head
    th.center(width="7%") {{ "table.hide" | translate:"news/categories" }}
    th(width="13%") {{ "table.tag" | translate:"news/categories" }}
    th(width="65%") {{ "table.desc" | translate:"news/categories" }}
    th.center(width="5%") {{ "table.stories" | translate:"news/categories" }}
  tr(ng-repeat="category in categories | orderBy : counter")
    td.center
      input(type="checkbox", ng-model="filters[category.id]")
    td
      news-category(ng-model="category")
    td {{ category.description }}
    td.center {{ category.counter || 0 | prettynumber }}

button(ng-click="saveFilters(filters)") {{ "submit" | translate:"news/categories" }}
